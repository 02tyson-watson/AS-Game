<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Custom">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CUSTOM"
        android:paddingTop="20sp"
        android:fontFamily="@font/ka1"
        android:id="@+id/CUSTOM"
        android:textSize="40sp"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:layout_alignParentTop="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:fontFamily="@font/ka1"
        android:textSize="50sp"
        android:onClick="openGamecustom"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/CUSTOM"
        android:layout_marginTop="70dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:textSize="12sp"
            android:fontFamily="@font/ka1"
            android:textColor="#000000"
            android:text="The Distance Between The Obstacles"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/up"
                android:fontFamily="@font/ka1"
                android:paddingStart="25dp"
                android:onClick="obgapup"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/obgapnumber"
                android:textSize="25sp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/ka1"
                android:textColor="#000000"/>
            <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/down"
            android:fontFamily="@font/ka1"
            android:onClick="obgapdown"
            android:paddingStart="25dp"
            android:textColor="#000000"
            android:textSize="30sp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:textSize="12sp"
            android:fontFamily="@font/ka1"
            android:textColor="#000000"
            android:text="The Width of the hole in the obstacles"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/up"
                android:fontFamily="@font/ka1"
                android:onClick="gapup"
                android:paddingStart="25dp"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/gapnumber"
                android:textSize="25sp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/ka1"
                android:textColor="#000000"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/down"
                android:fontFamily="@font/ka1"
                android:onClick="gapdown"
                android:paddingLeft="25dp"
                android:textColor="#000000"
                android:textSize="30sp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:textSize="12sp"
            android:fontFamily="@font/ka1"
            android:textColor="#000000"
            android:text="How Fast The Obstacles Come At you "/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/up"
                android:fontFamily="@font/ka1"
                android:onClick="fastup"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/fastnumber"
                android:textSize="25sp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/ka1"
                android:textColor="#000000"/>
            <Button
                android:layout_width="60dp"
                android:onClick="fastdown"
                android:layout_height="wrap_content"
                android:background="@drawable/down"
                android:fontFamily="@font/ka1"
                android:paddingStart="25dp"
                android:textColor="#000000"
                android:textSize="30sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="25dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose the player color"
                android:fontFamily="@font/ka1"
                android:textColor="#000000"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@id/Red"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:id="@+id/Red"
                    android:onClick="pRed"
                    android:fontFamily="@font/ka1"
                    android:text="Red" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:onClick="pGreen"
                    android:id="@+id/Green"
                    android:text="Green"
                    android:fontFamily="@font/ka1"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="pBlue"
                    android:id="@+id/Blue"
                    android:layout_marginStart="15dp"
                    android:text="Blue"
                    android:fontFamily="@font/ka1"/>
                </RadioGroup>
            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose the obstacle color"
                android:fontFamily="@font/ka1"
                android:textColor="#000000"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@id/white"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:id="@+id/white"
                    android:onClick="obWhite"
                    android:fontFamily="@font/ka1"
                    android:text="white" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:onClick="obRed"
                    android:id="@+id/redob"
                    android:text="Red"
                    android:fontFamily="@font/ka1"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="obBlue"
                    android:id="@+id/Blueob"
                    android:layout_marginStart="15dp"
                    android:text="Blue"
                    android:fontFamily="@font/ka1"/>
            </RadioGroup>
            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose the Background color"
                android:fontFamily="@font/ka1"
                android:textColor="#000000"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@id/backblack"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="blackBack"
                    android:id="@+id/backblack"
                    android:text="Black"
                    android:fontFamily="@font/ka1"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:id="@+id/whiteback"
                    android:onClick="backWhite"
                    android:fontFamily="@font/ka1"
                    android:layout_marginStart="15dp"
                    android:text="white" />



            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>